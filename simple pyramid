#include <stdio.h>

int main() 
{
    int i,j,r,k;
    printf("no of rows:");
    scanf("%d",&r);
   
   for(i=0;i<=r;i++)
    {
        for(j=i;j<=r-1;j++)
        {
            printf("  ");
             }
             for(k=1;k<=i;k++)
             {
                 printf("%4s","*");
             }
             
        printf("\n");
    }
    return 0;
}
output:
no of rows:4
        
         *
       *   *
     *   *   *
   *   *   *   *
