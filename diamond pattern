#include<stdio.h>
void main()
{
    int rows=7,i,j,k,half=rows/2,a,b,c;
    for(i=1;i<=half+1;i++)
	{
		for(j=i;j<half+1;j++)
		{
			printf("  ");	
		}
		for(k=1;k<=i;k++)
		{
			printf("%4s","*");
		}
		printf("\n");
	}
        
    for(a=1;a<=half;a++)
    {
        for(b=1;b<=a;b++)
        {
            printf("  ");
        }
        for(c=half;c>=a;c--)


      
        {
            printf("%4s","*");
        }
        printf("\n");
    }
}


output:
         *
       *   *
     *   *   *
   *   *   *   *
     *   *   *
       *   *
         *

